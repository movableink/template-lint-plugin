{
  "name": "@movable/template-lint-plugin",
  "version": "2.1.0",
  "main": "index.js",
  "license": "MIT",
  "files": [
    "index.js",
    "lib"
  ],
  "scripts": {
    "lint": "eslint .",
    "test": "jest",
    "release": "standard-version"
  },
  "dependencies": {
    "ember-template-lint": "^2.0.0"
  },
  "devDependencies": {
    "@movable/eslint-config": "^0.6.10",
    "@movable/eslint-config-node": "^0.4.3",
    "@movable/prettier-config": "^0.3.2",
    "husky": "^4.2.5",
    "jest": "^24.9.0",
    "lint-staged": "^10.5.4",
    "standard-version": "^8.0.2",
    "theredoc": "^1.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "*.{json,md,yml}": "prettier --write"
  },
  "standard-version": {
    "scripts": {
      "postchangelog": "prettier --write CHANGELOG.md"
    }
  },
  "volta": {
    "node": "12.21.0",
    "yarn": "1.22.10"
  }
}
